{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "type": "module",
  "name": "workspace",
  "version": "0.1.1",
  "packageManager": "yarn@3.2.2",
  "devDependencies": {
    "@jest/types": "^28.1.3",
    "@rushstack/eslint-patch": "^1.1.4",
    "@saberhq/eslint-config": "^2.0.4",
    "@saberhq/tsconfig": "^2.0.4",
    "@types/eslint": "^8.4.6",
    "@types/jest": "^28.1.8",
    "@types/node": "^18.7.13",
    "@types/prettier": "^2.7.0",
    "@typescript-eslint/utils": "^5.34.0",
    "@yarnpkg/doctor": "^3.1.4",
    "eslint": "^8.22.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-runtime": "^28.1.3",
    "lint-staged": "^13.0.3",
    "openapi-typescript-codegen": "^0.23.0",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.8",
    "typedoc": "^0.23.10",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "publish:all": "yarn workspaces foreach --exclude workspace -vpti --topological-dev npm publish",
    "docs:generate": "typedoc .",
    "bump": "yarn workspaces foreach -t version",
    "test": "jest --passWithNoTests",
    "lint": "eslint . --cache",
    "lint:ci": "eslint . --max-warnings=0",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{ts,tsx}": "eslint --cache --fix",
    "*.{md,js,json,yml,yaml,css,md}": "prettier --write"
  },
  "resolutions": {
    "axios": "^0.27"
  }
}
